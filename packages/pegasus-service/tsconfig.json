{ 
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "target": "es5",
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/__tests__", "lib"]
}
