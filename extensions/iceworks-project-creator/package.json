{
  "name": "iceworks-project-creator",
  "displayName": "iceworks Project Creator",
  "description": "Quick to create a front-end project.",
  "publisher": "iceworks",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onCommand:iceworks-project-creator.start"
  ],
  "main": "./build/src-extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "iceworks-project-creator.start",
        "title": "iceworks: Create Project"
      }
    ],
    "configuration": {
      "title": "iceworks Project Creator",
      "properties": {
        "iceworks.materialSources": {
          "type": "array",
          "default": [
            {
              "name": "PC web",
              "type": "react",
              "source": "http://ice.alicdn.com/assets/materials/react-materials.json",
              "description": "基于 Fusion 基础组件和 ice 脚手架的官方物料"
            },
            {
              "name": "无线终端",
              "type": "react",
              "source": "http://ice.alicdn.com/assets/materials/react-materials.json",
              "description": "基于 Fusion 基础组件和 ice 脚手架的官方物料"
            }
          ],
          "description": "iceworks materialSources"
        },
        "iceworks.user": {
          "type": "object",
          "default": {
            "empId": "",
            "account": "",
            "gitlabToken": ""
          },
          "properties": {
            "empId": {
              "type": "string",
              "description": "工号"
            },
            "account": {
              "type": "string",
              "description": "域账号"
            },
            "gitlabToken": {
              "type": "string",
              "description": "gitlab 个人 token"
            }
          },
          "description": "iceworks user detail"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ice-lab/iceworks.git"
  },
  "scripts": {
    "start": "icejs start --disable-reload",
    "build": "icejs build",
    "vscode:prepublish": "rm -rf out && npm run compile && npm run build",
    "compile": "tsc -p tsconfig.extension.json",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p tsconfig.extension.json",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.10",
    "@types/ejs": "^3.0.1",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.35",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "build-plugin-css-assets-local": "^0.1.0",
    "build-plugin-fusion": "^0.1.3",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "ice.js": "^1.0.0",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@alifd/next": "^1.19.4",
    "@alifd/theme-design-pro": "^0.x",
    "@iceworks/material-utils": "^0.1.0",
    "@iceworks/vscode-webview": "0.1.0",
    "@iceworks/common-service": "^0.1.0",
    "@iceworks/project-service": "^0.1.0",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "fs-extra": "^9.0.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  }
}