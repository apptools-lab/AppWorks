{
  "name": "iceworks-project-viewer",
  "displayName": "iceworks Project Viewer",
  "description": "Quick to view and build your react app.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onView:nodeDependencies",
    "onView:scripts",
    "onView:pages",
    "onView:components"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iceworksMain",
          "title": "iceworks Project Viewer",
          "icon": "assets/logo.png"
        }
      ]
    },
    "views": {
      "iceworksMain": [
        {
          "id": "welcomePage",
          "name": "Welcome Page",
          "when": "workbenchState == empty"
        },
        {
          "id": "npmScripts",
          "name": "Npm Scripts",
          "when": "workbenchState != empty"
        },
        {
          "id": "pages",
          "name": "Pages",
          "when": "workbenchState != empty"
        },
        {
          "id": "components",
          "name": "Components",
          "when": "workbenchState != empty"
        },
        {
          "id": "nodeDependencies",
          "name": "Node Dependencies",
          "when": "workbenchState != empty"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "welcomePage",
        "contents": "In order to use iceworks Project Viewer, you have to open a folder or create a new project first.\n[Open a Folder](command:vscode.openFolder)\n[Create New Project](command:workbench.action.createProject)\nTo learn more about how to use iceworks in VS Code [read the docs](https://github.com/ice-lab/iceworks).",
        "when": "workbenchState == empty"
      },
      {
        "view": "npmScripts",
        "contents": "npm scripts could not be found in package.json."
      },
      {
        "view": "pages",
        "contents": "Pages could not be found."
      },
      {
        "view": "components",
        "contents": "Components could not be found."
      },
      {
        "view": "nodeDependencies",
        "contents": "Node dependencies could not be found."
      }
    ],
    "commands": [
      {
        "command": "iceworksMain.npmScripts.refresh",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      },
      {
        "command": "iceworksMain.npmScripts.executeCommand",
        "title": "Run",
        "icon": {
          "light": "assets/light/run.svg",
          "dark": "assets/dark/run.svg"
        }
      },
      {
        "command": "iceworksMain.pages.add",
        "title": "Add",
        "icon": {
          "light": "assets/light/add.svg",
          "dark": "assets/dark/add.svg"
        }
      },
      {
        "command": "iceworksMain.pages.refresh",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      },
      {
        "command": "iceworksMain.pages.openFile",
        "title": "Open File"
      },
      {
        "command": "iceworksMain.components.add",
        "title": "Add",
        "icon": {
          "light": "assets/light/add.svg",
          "dark": "assets/dark/add.svg"
        }
      },
      {
        "command": "iceworksMain.components.refresh",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.setPackageManager",
        "title": "Set Npm Client",
        "icon": {
          "light": "assets/light/setting.svg",
          "dark": "assets/dark/setting.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.setNpmRegister",
        "title": "Set Npm Register",
        "icon": {
          "light": "assets/light/register.svg",
          "dark": "assets/dark/register.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.addDependency",
        "title": "Add Dependency",
        "icon": {
          "light": "assets/light/add.svg",
          "dark": "assets/dark/add.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.install",
        "title": "Install Dependencies",
        "icon": {
          "light": "assets/light/install.svg",
          "dark": "assets/dark/install.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.reinstall",
        "title": "Reinstall Dependencies",
        "icon": {
          "light": "assets/light/dep-reinstall.svg",
          "dark": "assets/dark/dep-reinstall.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.refresh",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      },
      {
        "command": "iceworksMain.nodeDependencies.upgrade",
        "title": "Upgrade Dependency",
        "icon": {
          "light": "assets/light/upgrade.svg",
          "dark": "assets/dark/upgrade.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "iceworksMain.npmScripts.refresh",
          "when": "view == npmScripts",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.pages.add",
          "when": "view == pages",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.pages.refresh",
          "when": "view == pages",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.components.add",
          "when": "view == components",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.components.refresh",
          "when": "view == components",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.nodeDependencies.setPackageManager",
          "when": "view == nodeDependencies",
          "group": "navigation@01"
        },
        {
          "command": "iceworksMain.nodeDependencies.setNpmRegister",
          "when": "view == nodeDependencies",
          "group": "navigation@02"
        },
        {
          "command": "iceworksMain.nodeDependencies.addDependency",
          "when": "view == nodeDependencies",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.nodeDependencies.install",
          "when": "view == nodeDependencies",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.nodeDependencies.reinstall",
          "when": "view == nodeDependencies",
          "group": "navigation"
        },
        {
          "command": "iceworksMain.nodeDependencies.refresh",
          "when": "view == nodeDependencies",
          "group": "navigation@99"
        }
      ],
      "view/item/context": [
        {
          "command": "iceworksMain.npmScripts.executeCommand",
          "when": "view == npmScripts && viewItem == script",
          "group": "inline"
        },
        {
          "command": "iceworksMain.nodeDependencies.upgrade",
          "when": "view == nodeDependencies && viewItem == outdatedDependency",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "iceworks Project Viewer",
      "properties": {
        "iceworks.packageManager": {
          "type": "string",
          "default": "npm",
          "enum": [
            "npm",
            "cnpm",
            "tnpm",
            "yarn"
          ],
          "description": "iceworks npm package manager."
        },
        "iceworks.npmRegister": {
          "type": "string",
          "default": "https://registry.npmjs.org",
          "enum": [
            "https://registry.npmjs.org",
            "https://registry.npm.taobao.org"
          ],
          "description": "iceworks npm register."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ice-lab/iceworks.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/rimraf": "^3.0.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/latest-version": "^4.0.1",
    "fs-extra": "^9.0.0",
    "ice-npm-utils": "^1.4.1",
    "latest-version": "^5.1.0",
    "rimraf": "^3.0.2",
    "util": "^0.12.3"
  }
}