{
	"name": "iceworks-project-viewer",
	"displayName": "iceworks-project-viewer",
	"description": "iceworks-project-viewer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:nodeDependencies",
		"onView:scripts",
		"onView:pages",
		"onView:components"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "projectViewer",
					"title": "Project Viewer",
					"icon": "assets/logo.svg"
				}
			]
		},
		"views": {
			"projectViewer": [
				{
					"id": "npmScripts",
					"name": "Npm Scripts"
				},
				{
					"id": "pages",
					"name": "Pages"
				},
				{
					"id": "components",
					"name": "Components"
				},
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies"
				}
			]
		},
		"commands": [
			{
				"command": "npmScripts.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "npmScripts.executeCommand",
				"title": "Run",
				"icon": {
					"light": "assets/light/run.svg",
					"dark": "assets/dark/run.svg"
				}
			},
			{
				"command": "pages.addEntry",
				"title": "Add",
				"icon": {
					"light": "assets/light/add.svg",
					"dark": "assets/dark/add.svg"
				}
			},
			{
				"command": "pages.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "pages.openFile",
				"title": "Open File"
			},
			{
				"command": "components.addEntry",
				"title": "Add",
				"icon": {
					"light": "assets/light/add.svg",
					"dark": "assets/dark/add.svg"
				}
			},
			{
				"command": "components.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "nodeDependencies.installEntry",
				"title": "Install Dependencies",
				"icon": {
					"light": "assets/light/install.svg",
					"dark": "assets/dark/install.svg"
				}
			},
			{
				"command": "nodeDependencies.reinstallEntry",
				"title": "Reinstall Dependencies",
				"icon": {
					"light": "assets/light/dep-reinstall.svg",
					"dark": "assets/dark/dep-reinstall.svg"
				}
			},
			{
				"command": "nodeDependencies.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "nodeDependencies.upgradeEntry",
				"title": "Upgrade Dependency",
				"icon": {
					"light": "assets/light/upgrade.svg",
					"dark": "assets/dark/upgrade.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "npmScripts.refreshEntry",
					"when": "view == npmScripts",
					"group": "navigation"
				},
				{
					"command": "pages.addEntry",
					"when": "view == pages",
					"group": "navigation"
				},
				{
					"command": "pages.refreshEntry",
					"when": "view == pages",
					"group": "navigation"
				},
				{
					"command": "components.addEntry",
					"when": "view == components",
					"group": "navigation"
				},
				{
					"command": "components.refreshEntry",
					"when": "view == components",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.installEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.reinstallEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "npmScripts.executeCommand",
					"when": "view == npmScripts && viewItem == script",
					"group": "inline"
				},
				{
					"command": "nodeDependencies.upgradeEntry",
					"when": "view == nodeDependencies && viewItem == dependency",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}